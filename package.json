{
  "name": "happyhome",
  "version": "1.0.0",
  "description": "An application made for my lovely housemates",
  "private": true,
  "scripts": {
    "start": "./backend/bin/www",
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "dev-backend": "cross-env PORT=3001 nodemon --watch backend backend/bin/www",
    "dev-frontend": "react-scripts start",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "react-scripts build"
  },
  "keywords": [
    "nodejs",
    "reactjs",
    "express",
    "api"
  ],
  "author": "Frans Heeremans",
  "license": "ISC",
  "proxy": {
    "/api": {
      "target": "http://localhost:3001"
    }
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^1.18.3",
    "normalize.css": "^8.0.0",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^1.1.5",
    "styled-components": "^3.4.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.16.3",
    "joi": "^13.6.0",
    "moment": "^2.22.2",
    "mysql2": "^1.6.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "sequelize": "^4.38.0"
  }
}
